<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.vinid.moviedb.ui.search.view.SearchFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuBarLayout"
        android:layout_width="@dimen/width_0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundMenuBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchMovies"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_8dp"
            app:cardCornerRadius="@dimen/corner_radius_6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv_search_movies"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/searchMoviesTabLayout"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="@android:color/holo_red_light"
            app:tabInlineLabel="true"
            app:tabTextColor="@android:color/white"
            app:tabIconTint="@android:color/white"
            app:tabSelectedTextColor="@android:color/holo_red_light"
            app:layout_constraintTop_toBottomOf="@id/searchMovies"
            app:layout_constraintStart_toStartOf="@id/searchMovies"
            app:layout_constraintEnd_toEndOf="@id/searchMovies"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/moviesResultViewPager"
        android:layout_width="@dimen/width_0dp"
        android:layout_height="@dimen/height_0dp"
        app:layout_constraintTop_toBottomOf="@id/menuBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>